<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="6dp"
    android:background="@drawable/todo_holder_style">

    <TextView
        android:id="@+id/ToDoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Todo"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/TodoTimeLeft"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="TodoTimeLeft"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ToDoPriority"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ToDoPriority"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/Label"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Time Left  : "
        app:layout_constraintBottom_toBottomOf="@+id/ToDoPriority"
        app:layout_constraintEnd_toStartOf="@+id/TodoTimeLeft" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edit_text_style" />
</androidx.constraintlayout.widget.ConstraintLayout>